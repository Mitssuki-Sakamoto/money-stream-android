<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presenters.fragments.OurHistoryFormFragment">
<!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/input_nominal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nominal" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remaining_nominal_list"
            android:entries="@array/budget_list"
            android:spinnerMode="dialog" />
            <!--android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" -->

    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/input_nominal"
        android:id="@+id/amount_of_money"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount" />
        <EditText
            android:id="@+id/text_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_amount"
            android:gravity="right" />
    </LinearLayout>

<Button
    app:layout_constraintTop_toBottomOf="@+id/amount_of_money"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/button_pay"
    android:text="@string/pay"/>



</androidx.constraintlayout.widget.ConstraintLayout>